<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/positionTextView"
            android:layout_marginTop="124dp"/>
    <Button
            android:text="Request Position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requestPositionBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/positionTextView"
    />
    <Button
            android:text="Automatic updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/automaticUpdatesBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="96dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/requestPositionBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.7"/>

</android.support.constraint.ConstraintLayout>